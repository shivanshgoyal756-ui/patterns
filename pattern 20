int main() {
    int n=10;
    
     for(int i=1;i<=n;++i)
  {    
      for(int k=1;k<=(n-i);++k)
      {
          printf("  ");
      }
      
     
      for( int j=1;j<=i;j++)
      {
          
           printf("1 0 ");
          
      }
      printf("\n");
         
  }
    return 0;
}

#include <stdio.h>

int main() {
    int n=5;
    
     for(int i=n;i>=1;--i)
  {    
      for(int k=1;k<=i;++k)
      {
          printf("%d",i);
      }
      printf("\n");
  }
  return 0;
}

