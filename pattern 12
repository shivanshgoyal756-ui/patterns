#include <stdio.h>

int main() {
    int n=5;
     for(int i=5;i<=i;--i)
  {    
      for(int k=1;k<=5-i;++k)
      {
          printf(" ");
      }
      
     
      for( int j=1;j<=i;j++)
      {
          if(j==1||j==i||i==5)
           printf("* ");
           else
           printf("  ");
           
      }
      printf("\n");
         
  }
    return 0;
}

