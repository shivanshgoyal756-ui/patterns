int main() {
    int n=5;
     for(int i=1;i<=5;++i)
  {    
      for(int k=1;k<=5-i;++k)
      {
          printf(" ");
      }
      
     
      for( int j=1;j<=i;j++)
      {
           printf("* ");
      }
      printf("\n");
         
  }
  for (int q=n-1;q>=1;--q)
  {
      
     for (int w=1;w<=n-q;++w)
     {
         printf(" ");
     }
     for (int s=1;s<=q;++s)
     {
         printf("* ");
         
     }
     printf("\n");
  }
    return 0;
}


