#include <stdio.h>

int main() {
    int n=4;    
    
    for(int i=4;i>=1;--i)
  {    
      for(int k=1;k<=n-i;++k)
      {
          printf(" ");
      }
      
     
      for( int j=1;j<=i;j++)
      {
           printf("* ");
      }
      printf("\n");
         
}
   for(int x=2;x<=n;++x)
  {
    
    for(int w=1;w<=4-x;++w)
    {
        printf(" ");
        
    }
    for(int s=x;s>=1;--s)
    {
        printf("* ");
        
    }
    printf("\n");
    
  }
    return 0;
}


