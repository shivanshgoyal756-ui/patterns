#include <stdio.h>

int main() {
    int n=6;
    int p=1;
     for(int i=1;i<=n;++i)
  {    
      for(int k=1;k<=(n-i)*2;++k)
      {
          printf(" ");
      }
      
     
      for( int j=1;j<=i*2;j++)
      {    if(j<=i)
      {
           printf("%d ",j);
      }
           else
          { printf("%d ",p);
           p=p+1;
          }
           
      }
      printf("\n");
      p=1;
         
  }
  p=1;
  for (int q=n-1;q>=1;--q)
  {
      
     for (int w=1;w<=(n-q)*2;++w)
     {
         printf(" ");
     }
     for (int s=1;s<=q*2;++s)
     {   if(s<=q)
     {
         printf("%d ",s);
     }
     else
     {
         printf("%d ",p);
         p=p+1;
     }
        
         
     }
     printf("\n");
     p=1;
  }
    return 0;
}


