#include <stdio.h>

int main() {
    int n=4;
     for(int i=1;i<=n;++i)
  {    
      for(int k=1;k<=n-i;++k)
      {
          printf(" ");
      }
      
     
      for( int j=1;j<=i;j++)
      {
          if(j==1||j==i)
          printf("1 ");
          else
          printf("%d ",(i-1));
      }
      printf("\n");
         
  }
    return 0;
}
   1 
  1 1 
 1 2 1 
1 3 3 1
