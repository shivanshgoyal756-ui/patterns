#include <stdio.h>

int main() {
    int n=4;    
    
    for(int i=n;i>=1;--i)
  {    
      for(int k=1;k<=n-i;++k)
      {
          printf(" ");
      }
      
     
      for( int j=1;j<=i;j++)
      
      {
          if(j==1||j==i||i==n)
           printf("* ");
           else
           printf("  ");
      }
      printf("\n");
         
}
   for(int x=2;x<=n;++x)
  {
    
    for(int w=1;w<=n-x;++w)
    {
        printf(" ");
        
    }
    for(int s=x;s>=1;--s)
    {
        if(s==x||s==1||x==n)
        printf("* ");
        else
        printf("  ");
        
    }
    printf("\n");
    
  }
    return 0;
}

